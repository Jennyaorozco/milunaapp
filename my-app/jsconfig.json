{
  "compilerOptions": {
    "baseUrl": ".", // Importante: define la base para las rutas absolutas
    "paths": {
      "@/*": ["./*"] // Esto significa que "@/" mapea a la raíz de tu proyecto
    },
    "target": "esnext", // Usar una versión moderna de JavaScript
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false, // Puedes cambiar a 'true' para un control más estricto, pero 'false' es más permisivo para JS
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler", // Recomendado por Next.js para el App Router
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // Permite usar JSX
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.js", "**/*.jsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}